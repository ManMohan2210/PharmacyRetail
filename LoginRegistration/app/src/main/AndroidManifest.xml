<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.medicare.launch.app">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="com.medicare.app.permission.MAPS_RECEIVE"/>
    <uses-permission android:name="com.medicare.app.permission.READ_GSERVICES"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES"/>

    <permission
        android:name="com.medicare.app.permission.MAPS_RECEIVE"
        android:protectionLevel="signature"/>

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false"/>
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true"/>

    <application
        android:name="com.medicare.app.activity.Application"
        android:allowBackup="true"
        android:icon="@mipmap/med"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppTheme.Light.NoActionBar">

        <!--Activities-->
        <activity android:name="com.medicare.app.activity.ListDisplayActivity"
                  android:screenOrientation="portrait"/>
        <activity android:name="com.medicare.app.activity.TokenSending"
                  android:screenOrientation="portrait"/>
        <activity android:name="com.medicare.app.activity.ActivitySendPushNotification"
                  android:screenOrientation="portrait"/>
        <activity android:name="com.medicare.app.activity.ImageDetail"
                  android:screenOrientation="portrait"/>
        <activity android:name="com.medicare.app.activity.ViewDatabase"
                  android:screenOrientation="portrait"/>
        <activity android:name="com.medicare.app.activity.ConfirmMedicine"
                  android:screenOrientation="portrait"/>
        <activity android:name="com.medicare.app.activity.HelpActivity"
                  android:screenOrientation="portrait"/>
        <activity android:name="com.medicare.app.activity.ShowImagesActivity"
                  android:screenOrientation="portrait"/>
        <activity android:name="com.medicare.app.activity.AddMedicineActivity"
                  android:screenOrientation="portrait"/>
        <activity android:name="com.medicare.app.activity.UserType"
                  android:screenOrientation="portrait"/>
        <activity android:name="com.medicare.app.activity.DrawerMain"
                  android:screenOrientation="portrait"/>
        <activity android:name="com.medicare.app.activity.MyNotificationManager"
                  android:screenOrientation="portrait"/>
        <activity android:name="com.medicare.app.activity.NotificationView"
                  android:screenOrientation="portrait"/>
        <activity android:name="com.medicare.app.activity.GoogleMapActivity"
                  android:screenOrientation="portrait"/>
        <activity android:name="com.medicare.app.activity.RetailerMapActivity"
                  android:screenOrientation="portrait"/>
        <activity
            android:name="com.medicare.app.activity.MedicineListActivity"
            android:label="Medicine List"
            android:parentActivityName="com.medicare.app.activity.AddMedicineActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.medicare.app.activity.LoginPageActivity"
            android:windowSoftInputMode="stateHidden"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.medicare.app.activity.MapsActivity"
            android:label="@string/title_activity_maps"
            android:screenOrientation="portrait"/>
        <activity android:name="com.medicare.app.activity.ShapeRibbleActivity"
                  android:screenOrientation="portrait"/>

        <activity
            android:name="com.medicare.app.activity.SplashScreen"
            android:label="@string/app_name" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.medicare.app.activity.HomeScreenSearchActivity"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name="com.medicare.app.activity.UploadPrescriptionActivity"/>
        <activity
            android:name="com.medicare.app.activity.SignUpActivity"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name="com.medicare.app.activity.NoNetworkActivity"/>
        <activity
            android:name="com.medicare.app.activity.PasswordChangeActivity"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name="com.medicare.app.activity.SuccessActivity"/>
        <activity
            android:name="com.medicare.app.activity.DirectionsMapActivity"
            android:label="Map"/>
        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name"/>
        <activity
            android:name="com.facebook.CustomTabActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>

                <data android:scheme="@string/fb_login_protocol_scheme"/>
            </intent-filter>
        </activity>


        <!--Services-->
        <service android:name="com.medicare.app.services.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>
        <service android:name="com.medicare.app.services.MyFirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
            </intent-filter>
        </service>
        <service
            android:name="com.medicare.app.activity.FetchAddressIntentService"
            android:exported="false"/>
        <service android:name="com.medicare.app.activity.FirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>


        <!--content provider-->

        <provider
            android:name="com.facebook.FacebookContentProvider"
            android:authorities="com.facebook.app.FacebookContentProvider148851038810437"
            android:exported="true"/>


        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version"/>
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyCjg_RsAEt0iR1uP-uvUGVrt_ByhIvM_gw"/>
        <!--
     Set custom default icon. This is used when no icon is set for incoming notification messages.
     See README(https://goo.gl/l4GJaQ) for more.
        -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/abc_cab_background_top_material"/>
        <!--
             Set color used with incoming notification messages. This is used when no color is set for the incoming
             notification message. See README(https://goo.gl/6BKBk7) for more.
        -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/colorAccent"/>

    </application>

</manifest>