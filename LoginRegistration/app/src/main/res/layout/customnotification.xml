<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

    <ImageView

        android:id="@+id/imagenotileft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="10dp"
        android:height="10dp"/>

    <TextView
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/cyan"
        android:layout_toRightOf="@id/imagenotileft" />

    <TextView
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:textColor="@color/accent"
        android:layout_toRightOf="@+id/imagenotileft" />

    <ImageView
        android:id="@+id/imagenotiright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="10dp" />
    <Button
        android:id="@+id/btn_cancel_notif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/base"
        android:text="CANCEL"
        android:textColor="@color/white"
        android:layout_alignBaseline="@+id/btn_reply_notif"
        android:layout_alignBottom="@+id/btn_reply_notif"
        android:layout_toRightOf="@+id/text"
        android:layout_toEndOf="@+id/text"
        android:layout_marginLeft="31dp"
        android:layout_marginStart="31dp"/>
    <Button
        android:id="@+id/btn_reply_notif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/cyan"
        android:text="REPLY"
        android:layout_below="@+id/text"
        android:layout_toLeftOf="@+id/imagenotiright"
        android:layout_toStartOf="@+id/imagenotiright"
        android:layout_marginRight="42dp"
        android:layout_marginEnd="42dp"
        android:layout_marginTop="119dp"/>

</RelativeLayout>