<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="mypackage.loginregistration.LoginPage">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/ll_btn_contianer"
        android:orientation="horizontal"
        android:layout_above="@+id/btn_continue"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:id="@+id/layoutCamera"
            android:layout_width="333.3dp"
            android:layout_height="match_parent"
            android:layout_weight="0.33"
            android:background="@drawable/background_with_shadow"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:layout_marginRight="1dp">

            <ImageView
                android:id="@+id/imageViewCamera"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/camera"
                />

            <TextView
                android:id="@+id/tv_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/camera"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layoutExisting"
            android:layout_width="333.3dp"
            android:layout_height="match_parent"
            android:layout_alignLeft="@id/layoutCamera"
            android:layout_weight="0.33"
            android:background="@drawable/background_with_shadow"
            android:layout_marginRight="1dp">
            <TextView
                android:id="@+id/tv_existing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/existing"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@+id/imageViewExisting"
                android:layout_alignStart="@+id/imageViewExisting"
                android:layout_marginBottom="15dp" />

            <ImageView
                android:id="@+id/imageViewExisting"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/existing"
                android:layout_above="@+id/tv_existing"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/layoutGallery"
            android:layout_width="333.3dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/layoutExisting"
            android:layout_weight="0.33"
            android:background="@drawable/background_with_shadow">

            <ImageView
                android:id="@+id/imageViewGallery"
                android:layout_width="50dp"
                android:layout_height="50dp"
                 android:src="@drawable/gallery"
                android:layout_above="@+id/tv_gallery"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:id="@+id/tv_gallery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gallery"
                android:layout_marginBottom="19dp"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@+id/imageViewGallery"
                android:layout_alignStart="@+id/imageViewGallery" />


        </RelativeLayout>
    </LinearLayout>


    <TextView

        android:id="@+id/choseOpt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/choseOpt"
        android:layout_marginTop="@dimen/abc_action_bar_default_padding_material"
        android:layout_marginBottom="@dimen/abc_action_bar_default_padding_material"
        android:layout_above="@id/ll_btn_contianer"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
            android:id="@+id/btn_continue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cyan"
            android:text="@string/con"
            android:textColor="@color/white"
            android:layout_marginTop="2dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

    <ImageView
        android:id="@+id/iv_selected_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/prescription"
        android:background="@drawable/background_with_shadow"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_above="@id/choseOpt"/>


</RelativeLayout>



