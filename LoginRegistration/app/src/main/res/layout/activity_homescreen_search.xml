<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/activity_signup"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
             >
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"

        />
    <TextView
        android:id="@+id/tv_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="15dp"
        android:text="@string/uploadPrescription"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/white"/>
    <AutoCompleteTextView
        android:layout_marginTop="13dp"
        android:id="@+id/auto_search"
        style="@style/Autocomplete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_search_black_24dp"
        android:hint="@string/searchMedicine"
        android:imeOptions="actionDone"
        android:layout_weight="0.76"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView

        android:id="@+id/chose_opt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/choseOpt"
        android:textColor="@color/cyan"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/auto_search"
        android:layout_alignLeft="@+id/tv_signup"
        android:layout_alignStart="@+id/tv_signup"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/ll_btn_contianer"
        android:orientation="horizontal"
        android:layout_below="@+id/chose_opt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:id="@+id/layout_prescription"
            android:layout_width="146dp"
            android:layout_height="match_parent"
            android:layout_marginRight="1dp">

            <TextView
                android:id="@+id/tv_prescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="14dp"
                android:text="@string/prescription"
                android:textColor="@color/dark_cyan"/>

            <ImageView
                android:id="@+id/imageview_presecription"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_receipt_black_24dp"
                android:layout_above="@+id/tv_prescription"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_camera"
            android:layout_width="118dp"
            android:layout_height="99dp"
            android:layout_marginRight="1dp"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <ImageView
                android:id="@+id/imageview_camera"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_photo_camera_black_24dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/tv_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/imageview_camera"
                android:layout_alignStart="@+id/imageview_camera"
                android:layout_marginTop="3dp"
                android:layout_below="@+id/imageview_camera"
                android:text="@string/camera"
                android:textColor="@color/dark_cyan"/>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/layout_gallery"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignLeft="@id/layout_camera"
            >

            <ImageView
                android:id="@+id/image_view_gallery"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_photo_album_black_24dp"/>

            <TextView
                android:id="@+id/tv_gallery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/image_view_gallery"
                android:layout_alignLeft="@+id/image_view_gallery"
                android:layout_alignRight="@+id/image_view_gallery"
                android:layout_alignStart="@+id/image_view_gallery"
                android:layout_below="@+id/image_view_gallery"
                android:text="@string/gallery"
                android:textColor="@color/dark_cyan"/>


        </RelativeLayout>
    </LinearLayout>



    <ImageView
        android:id="@+id/iv_selected_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/ll_btn_contianer"
        android:layout_centerHorizontal="true"/>


    <Button
        android:id="@+id/btn_continue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cyan"
        android:text="@string/continues"
        android:textSize="@dimen/button_font_size"
        android:textColor="@color/white"
        android:layout_above="@+id/bottom_navigation"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/oil"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:menu="@menu/bottom_nav_menu" />

</RelativeLayout>
