<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="42dp"
        android:gravity="center"
        android:text="Hii You are loged in !!"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/cyan" />

    <Button
        android:id="@+id/btn_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/cyan"
        android:text="upload prescription"
        android:textColor="@color/white"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp" />

    <Button
        android:id="@+id/btn_no_network"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/cyan"
        android:text="no network"
        android:textColor="@color/white"
        android:layout_marginTop="46dp"
        android:layout_below="@+id/btn_select_city"
        android:layout_centerHorizontal="true" />
    <Button
        android:id="@+id/btn_select_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/cyan"
        android:text="select city"
        android:textColor="@color/white"
        android:layout_below="@id/btn_upload"
        android:layout_alignRight="@id/btn_no_network"
        android:layout_alignEnd="@id/btn_no_network"
        android:layout_marginTop="39dp" />

    <Button
        android:id="@+id/btn_searchmedicine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/cyan"
        android:text="Search medicine"
        android:textColor="@color/white"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/btn_no_network"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
